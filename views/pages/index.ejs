<div class="m-4">
    <div class="row m-3">
        <div class="col-md-4 offset-md-4">
            <h3>Add user:</h3>
            <form id="adduser" name="adduser" style="margin: 5%;">


                <input type="text" name="name" id="name" placeholder="John Doe" />
                <input type="number" name="age" id="age" placeholder="24" />
                <button onclick="addUser();" class="btn btn-outline-success btn-sm" type="submit">Add user</button>

            </form>
        </div>

    </div>
    <div class="row m-3">
        <div class="col-md-4 offset-md-4">
            <h3>Update user:</h3>
            <form id="updateuser" name="updateuser" style="margin: 5%;">


                <input type="text" name="id" id="update_id" class="update_field" placeholder="ID" required disabled />
                <input type="text" name="name" id="update_name" class="update_field" placeholder="John Doe" />
                <input type="text" name="age" id="update_age" class="update_field" placeholder="24" />
                <button onclick="update_user();" class="btn btn-outline-success btn-sm" type="submit">Update User</button>
                

            </form>
        </div>
        <div class="col-md-4"></div>
    </div>
    <div class="row m-3" id="user_list">

    </div>
</div>


